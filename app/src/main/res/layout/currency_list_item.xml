<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/country_image"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:src="@drawable/france"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/country_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/france"
                android:textSize="22dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:padding="4dp"
                android:layout_toRightOf="@+id/country_image"
                android:layout_toEndOf="@+id/country_image" />

            <TextView
                android:id="@+id/currency_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Euro"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:padding="4dp"
                android:layout_toRightOf="@+id/country_image"
                android:textStyle="italic|bold"
                android:layout_toEndOf="@+id/country_image"
                android:layout_below="@id/country_name"/>


            <TextView
                android:id="@+id/currency_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/france"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:padding="4dp"
                android:layout_toRightOf="@+id/country_image"
                android:textStyle="normal"
                android:layout_toEndOf="@+id/country_image"
                android:layout_below="@+id/currency_name"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>